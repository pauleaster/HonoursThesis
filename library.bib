author = {Baker, John G. and McWilliams, Sean T. and {Van Meter}, James R. and Centrella, Joan and Choi, Dae Il and Kelly, Bernard J. and Koppitz, Michael},
doi = {10.1103/PhysRevD.75.124024},
eprint = {0612117},
issn = {15507998},
journal = {Physical Review D - Particles, Fields, Gravitation and Cosmology},
number = {12},
pages = {1--17},
primaryClass = {gr-qc},
title = {{Binary black hole late inspiral: Simulations for gravitational wave observations}},
volume = {75},
year = {2007}
}
