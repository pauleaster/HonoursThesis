@article{Hotokezaka2016,
abstract = {Combining new gravitational waveforms derived by long-term (14--16 orbits) numerical-relativity simulations with waveforms by an effective-one-body (EOB) formalism for coalescing binary neutron stars, we construct hybrid waveforms and estimate the measurability for the dimensionless tidal deformability of the neutron stars, {\$}\backslashLambda{\$}, by advanced gravitational-wave detectors. We focus on the equal-mass case with the total mass {\$}2.7M{\_}\backslashodot{\$}. We find that for an event at a hypothetical effective distance of {\$}D{\_}{\{}\backslashrm eff{\}}=200{\$} Mpc, the distinguishable difference in the dimensionless tidal deformability will be {\$}\backslashapprox 100{\$}, 400, and 800 at 1-{\$}\backslashsigma{\$}, 2-{\$}\backslashsigma{\$}, and 3-{\$}\backslashsigma{\$} levels, respectively, for advanced LIGO. If the true equation of state is stiff and the typical neutron-star radius is {\$}R \backslashgtrsim 13 {\$} km, our analysis suggests that the radius will be constrained within {\$}\backslashapprox 1{\$} km at 2-{\$}\backslashsigma{\$} level for an event at {\$}D{\_}{\{}\backslashrm eff{\}}=200{\$} Mpc. On the other hand, if the true equation of state is soft and the typical neutron-star radius is {\$}R\backslashlesssim 12{\$} km , it will be difficult to narrow down the equation of state among many soft ones, although it is still possible to discriminate the true one from stiff equations of state with {\$}R\backslashgtrsim 13{\$} km. We also find that gravitational waves from binary neutron stars will be distinguished from those from spinless binary black holes at more than 2-{\$}\backslashsigma{\$} level for an event at {\$}D{\_}{\{}\backslashrm eff{\}}=200{\$} Mpc. The validity of the EOB formalism, Taylor-T4, and Taylor-F2 approximants as the inspiral waveform model is also examined.},
