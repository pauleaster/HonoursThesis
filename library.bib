doi = {10.1103/PhysRevD.90.062004},
eprint = {1406.5444},
issn = {15502368},
journal = {Physical Review D - Particles, Fields, Gravitation and Cosmology},
number = {6},
title = {{Prospects for high frequency burst searches following binary neutron star coalescence with advanced gravitational wave detectors}},
