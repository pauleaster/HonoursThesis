doi = {10.3847/1538-4357/836/1/5},
eprint = {1602.00303},
issn = {1538-4357},
journal = {The Astrophysical Journal},
number = {1},
pages = {5},
title = {{Label Transfer from APOGEE to LAMOST: Precise Stellar Parameters for 450,000 LAMOST Giants}},
url = {http://stacks.iop.org/0004-637X/836/i=1/a=5?key=crossref.86d92b64c2aa5e89ba0b3a9ed633d222},
